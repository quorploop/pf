---
import Badges from "../components/Badges.astro";
import Title from "../components/Title.astro";
import BasicLayout from "./BasicLayout.astro";

const { frontmatter } = Astro.props;
---

<BasicLayout title=`${frontmatter.title}`>
    <Title
        title={frontmatter.title}
    />
    <Badges badges={frontmatter.tags} />
    <article
        class="mt-8 prose dark:text-white dark:prose-headings:text-white dark:prose-p:text-white dark:prose-a:text-white dark:prose-li:text-white"
    >
        <slot />
    </article>
</BasicLayout>
